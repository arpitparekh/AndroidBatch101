<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".relam_database_internal.MyRealmDatabaseActivity">

    <EditText
        android:id="@+id/edtNameRealm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="69dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Name"
        app:layout_constraintBottom_toTopOf="@+id/edtEmailRealm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edtEmailRealm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="email"
        app:layout_constraintBottom_toTopOf="@+id/edtAdressRealm"
        app:layout_constraintStart_toStartOf="@+id/edtNameRealm"
        app:layout_constraintTop_toBottomOf="@+id/edtNameRealm" />

    <EditText
        android:id="@+id/edtAdressRealm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="address"
        app:layout_constraintBottom_toTopOf="@+id/btnSubmitRealm"
        app:layout_constraintStart_toStartOf="@+id/edtEmailRealm"
        app:layout_constraintTop_toBottomOf="@+id/edtEmailRealm" />

    <Button
        android:id="@+id/btnSubmitRealm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="submit to realm"
        app:layout_constraintBottom_toTopOf="@+id/listViewRealm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtAdressRealm" />

    <ListView
        android:id="@+id/listViewRealm"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSubmitRealm" />
</androidx.constraintlayout.widget.ConstraintLayout>